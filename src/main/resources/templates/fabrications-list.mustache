<!--        <a href="/fabrications/add">Оформить заявку на изготовление</a> |-->
<!--        <a href="/">Back to Index</a>-->
<!--    </nobr>-->
<!--</div>-->
<center><div>
    <table border="1" class="table w-75">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Название</th>
<!--            <th scope="col">Комментарий</th>-->
            <th scope="col">Дата/время заказа</th>
            <th scope="col">ФИО заказчика</th>
<!--            <th scope="col">Контакты заказчика</th>-->
            <th scope="col">Цена</th>
            <th scope="col">Кол-во</th>
<!--            <th scope="col">Изготавливаемый препарат</th>-->
            <th scope="col">Статус заказа</th>
            <th scope="col">Изменить статус на...</th>
            <th scope="col"></th>
            <th scope="col">Изменение</th>
            <th scope="col">Удаление</th>
        </tr>
        {{#fabricationsList}}
            <tr>
                <td scope="row">{{#fabricationsID}}{{fabricationsID}}{{/fabricationsID}}</td>
                <td><a href="/fabrications/{{fabricationsID}}/info">{{#title}}{{title}}{{/title}}</a></td>
<!--                <td>{{#comment}}{{comment}}{{/comment}}</td>-->
                <td>{{#orderdate}}{{orderdate}}{{/orderdate}}</td>
                <td>{{#fullnamecustomer}}{{fullnamecustomer}}{{/fullnamecustomer}}</td>
<!--                <td>{{#contactscustomer}}{{contactscustomer}}{{/contactscustomer}}</td>-->
                <td>{{#price}}{{price}}{{/price}}</td>
                <td>{{#amount}}{{amount}}{{/amount}}</td>
<!--                {{#tabletfabric}}-->
<!--                    <td> {{title}}</td>-->
<!--                {{/tabletfabric}}-->
                <td>{{#iscomplited}}{{iscomplited}}{{/iscomplited}}</td>
                <form id="cart" action="/fabrications/activity" name="cart" method="POST">
                <td><div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="activity" id="inlineRadio1" value="1">
                    <label class="form-check-label" for="inlineRadio1">Активный</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="activity" id="inlineRadio2" value="2" checked>
                    <label class="form-check-label" for="inlineRadio2">Неактивный</label>
                </div></td>
                    <input type="hidden" name="fabricationsID" value="{{fabricationsID}}">
                    <input type="hidden" name="_csrf" value="{{_csrf.token}}">
                    <td><input type="submit" class="btn btn-primary" value="Обновить статус"/></td>
                </form>
                <td><a href="/fabrications/{{fabricationsID}}/edit">Изменить</a></td>
                <td><a href="/fabrications/{{fabricationsID}}/delete">Удалить</a></td>
            </tr>
        {{/fabricationsList}}
    </table>
</div></center>
