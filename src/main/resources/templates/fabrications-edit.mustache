<center><h1>{{#add}}Оформление новой заявки на изготовление{{/add}}{{^add}}Изменение выбранной заявки{{/add}}</h1></center>
<br/>
<center><a class="btn btn-primary" href="/fabrications" role="button">Вернуться к списку заявок на изготовление</a></center>
<br/>
<center>
    <div class="text-block">
{{#fabrications}}
    <form action="{{#add}}/fabrications/add{{/add}}{{^add}}/fabrications/{{fabricationsID}}/edit{{/add}}" name="user"
          method="POST">
        <!--        <table border="0">-->
        <br class="row g-3">
            {{#fabricationsID}}
                <div class="form-floating mb-3">
                    <input type="hidden" value="{{fabricationsID}}" class="form-control" id="floatingInput"
                           placeholder="name@example.com">
                    <label for="floatingInput"></label>
                </div>
            {{/fabricationsID}}

            {{#errors}}
                <center>
                    <table id="myTable" border="1" class="table w-25">
                        <tr>
                            <th scope="col">Ошибка (-и)</th>
                        </tr>
                        {{#errorsMaps}}
                            <tr>
                                <td>{{#defaultMessage}}{{defaultMessage}}{{/defaultMessage}}</td>
                            </tr>
                        {{/errorsMaps}}
                        {{#nullSectionError}}
                            <tr>
                                <td>{{#nullSection}}{{nullSection}}{{/nullSection}}</td>
                            </tr>
                        {{/nullSectionError}}{{^nullSectionError}}{{/nullSectionError}}
<!--                        <tr>-->
<!--                            <td>{{#nullSection}}{{nullSection}}{{/nullSection}}</td>-->
<!--                        </tr>-->
                    </table>
                </center>
            {{/errors}}{{^errors}}{{/errors}}

<!--            {{#nullSectionError}}-->
<!--                <center>{{#nullSection}}{{nullSection}}{{/nullSection}}</center>-->
<!--            {{/nullSectionError}}{{^nullSectionError}}{{/nullSectionError}}-->

            <div class="form-floating mb-3 w-25">
                <input type="text" name="title" value="{{#title}}{{title}}{{/title}}" class="form-control"
                       id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput">Название</label>
            </div>
        <br/>
            <div class="form-floating mb-3 w-75">
                <input type="text" name="comment" value="{{#comment}}{{comment}}{{/comment}}" class="form-control"
                       id="floatingPassword" placeholder="Password">
                <label for="floatingPassword">Комментарий (не обязательно)</label>
            </div>
            <!--            <div class="form-floating mb-3">-->
            <!--                <input type="text" name="orderdate" value="{{#orderdate}}{{orderdate}}{{/orderdate}}"-->
            <!--                       class="form-control" id="floatingInput" placeholder="name@example.com">-->
            <!--                <label for="floatingInput">orderdate</label>-->
            <!--            </div>-->
            <div class="form-floating mb-3 w-75">
                <input type="text" name="fullnamecustomer"
                       value="{{#fullnamecustomer}}{{fullnamecustomer}}{{/fullnamecustomer}}" class="form-control"
                       id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput">ФИО заказчика</label>
            </div>
            <div class="form-floating mb-3 w-75">
                <input type="text" name="contactscustomer"
                       value="{{#contactscustomer}}{{contactscustomer}}{{/contactscustomer}}" class="form-control"
                       id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput">Контакты заказчика</label>
            </div>
            <div class="form-floating mb-3 w-75">
                <input type="number" name="price" value="{{#price}}{{price}}{{/price}}" class="form-control"
                       id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput">Цена</label>
            </div>
            <div class="form-floating mb-3 w-75">
                <input type="number" name="amount" value="{{#amount}}{{amount}}{{/amount}}" class="form-control"
                       id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput">Количество</label>
            </div>
            {{#newfabricid}}
                <tr>
                    <select required name="section" class="form-select mb-3 w-75" aria-label="Default select example">
                        <option value="0" selected>Выбирете препарат</option>
                        {{#tabletList}}
                            <option value="{{#tabletID}}{{tabletID}}{{/tabletID}}">{{#title}}{{title}}{{/title}}</option>
                        {{/tabletList}}
                    </select>
                </tr>
            {{/newfabricid}}
            {{^newfabricid}}
                {{#tabletfabric}}
                    <td><input type="hidden" value="{{tabletID}}" name="tabletID"/></td>
                {{/tabletfabric}}
            {{/newfabricid}}
            <!--        </table>-->
            <div><input type="hidden" name="_csrf" value="{{_csrf.token}}"></div>
            <input type="submit" class="btn btn-primary" value="{{#add}}Создать{{/add}}{{^add}}Обновить{{/add}}"/>
<!--        </br>-->
    </form>
{{/fabrications}}
    </div>
</center>
<br/><br/>
<div class="error">{{#errorMessage}}{{errorMessage}}{{/errorMessage}}</div>
<br/><br/>
<div class="footer">
    <p>&copy;LolyNIka 2022</p>
</div>
