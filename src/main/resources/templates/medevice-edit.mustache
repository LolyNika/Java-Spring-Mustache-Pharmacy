<center><h1>{{#add}}Добавить новый медицинский прибор{{/add}}{{^add}}Изменить информацию о медицинском приборе{{/add}}</h1></center>
<!--<a href="/employers">Вернуть</a>-->
<br/>
<center><a class="btn btn-primary" href="/medevices" role="button">Вернуться к списку медицинских приборов</a></center>
<br/>
<center>
    <div class="text-block">
        {{#medevice}}
            <form action="{{#add}}/medevices/add{{/add}}{{^add}}/medevices/{{medeviceID}}/edit{{/add}}" name="user"
                  method="POST">


                <br class="row g-3">
                {{#medeviceID}}
                    <div class="form-floating mb-3">
                        <input type="hidden" value="{{medeviceID}}" class="form-control" id="floatingInput"
                               placeholder="name@example.com">
                        <label for="floatingInput"></label>
                    </div>
                {{/medeviceID}}

                {{#errors}}
                    <center>
                        <table id="myTable" border="1" class="table w-25">
                            <tr>
                                <th scope="col">Ошибка (-и)</th>
                            </tr>
                            {{#errorsMaps}}
                                <tr>
                                    <td>{{#defaultMessage}}{{defaultMessage}}{{/defaultMessage}}</td>
                                </tr>
                            {{/errorsMaps}}
                        </table>
                    </center>
                {{/errors}}{{^errors}}{{/errors}}

                <div class="form-floating mb-3 w-25">
                    <input type="text" name="title" value="{{#title}}{{title}}{{/title}}"
                           class="form-control" id="floatingInput" placeholder="name@example.com">
                    <label for="floatingInput">Название</label>
                </div>

                <br/>
                <div class="form-floating mb-3 w-75">
                    <input type="text" name="description" value="{{#description}}{{description}}{{/description}}"
                           class="form-control" id="floatingInput" placeholder="name@example.com">
                    <label for="floatingInput">Описание</label>
                </div>

                <div class="form-floating mb-3 w-75">
                    <input type="text" name="manufacturer" value="{{#manufacturer}}{{manufacturer}}{{/manufacturer}}"
                           class="form-control" id="floatingPassword" placeholder="name@example.com">
                    <label for="floatingPassword">Производитель</label>
                </div>


                <div class="form-floating mb-3 w-75">
                    <input type="text" name="precautions" value="{{#precautions}}{{precautions}}{{/precautions}}"
                           class="form-control" id="floatingInput" placeholder="name@example.com">
                    <label for="floatingInput">Меры предосторожности</label>
                </div>

                <div class="form-floating mb-3 w-75">
                    <input type="text" name="packaging" value="{{#packaging}}{{packaging}}{{/packaging}}"
                           class="form-control" id="floatingInput" placeholder="name@example.com">
                    <label for="floatingInput">Упаковка</label>
                </div>

                <div class="form-floating mb-3 w-75">
                    <input type="text" name="storageconditions"
                           value="{{#storageconditions}}{{storageconditions}}{{/storageconditions}}"
                           class="form-control"
                           id="floatingInput" placeholder="name@example.com">
                    <label for="floatingInput">Условия хранения</label>
                </div>

                <div class="form-floating mb-3 w-75">
                    <input type="number" name="expdate" value="{{#expdate}}{{expdate}}{{/expdate}}" class="form-control"
                           id="floatingInput" placeholder="name@example.com">
                    <label for="floatingInput">Срок годности (лет)</label>
                </div>

                <div class="form-floating mb-3 w-75">
                    <input type="text" name="conditionsvacations"
                           value="{{#conditionsvacations}}{{conditionsvacations}}{{/conditionsvacations}}"
                           class="form-control"
                           id="floatingInput" placeholder="name@example.com">
                    <label for="floatingInput">Условия отпуска</label>
                </div>

                <div><input type="hidden" name="_csrf" value="{{_csrf.token}}"></div>
                <input type="submit" class="btn btn-primary"
                       value="{{#add}}Создать{{/add}}{{^add}}Обновить{{/add}}"/>
                <!--            </div>-->
            </form>
        {{/medevice}}
    </div>
</center>
<br/><br/>
<div class="error">{{#errorMessage}}{{errorMessage}}{{/errorMessage}}</div>
